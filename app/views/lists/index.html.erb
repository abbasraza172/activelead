<div class="modal-ov">
  <div id="ctrl-set" class="modal box modslideupalt">
    <div class="header"><span class="icon icon-cog"></span>Plan Selected</div>
    <div class="mod-body no-pad">
      <div class="row">
        <label>Name</label>
        <div id="color-scheme" class="buttons btn-radio">
          <%= @plan.name %>
        </div>
      </div>
      <div class="row">
        <label>Price</label>
        <div class="inp-cont no-pad">
          <%= @plan.price %>
        </div>
      </div>
      <div class="row">
        <label>Renewal Period</label>
        <div class="inp-cont no-pad">
          <%= @plan.renewal_period %>
        </div>
      </div>
    </div>
    <div class="mod-act">
      <button class="close green"><span class="icon icon-ok"></span>Close</button>
    </div>
  </div>
</div>

<div id="ctrl-box" class="box g16 row1">
  <div id="ctrl-panel" class="nav-box left vt">

    <div class="nav-cont">
      <div id="profile-set" class="nav-item show">
        <%= form_for(@user, as: :user, url: list_path(@user)) do |f| %>
            <div id="profile-av">
              <%= image_tag current_user.photo_path.present? ? current_user.photo_path : "avatars/alex.jpg"%>
              <span id="profile-av-info">uploaded <%=current_user.updated_at %></span>
              <div class="buttons wide">
                <!--<button class="change"><span class="icon icon-refresh"></span>Change</button>-->
                <%= f.filepicker_field :photo_path, button_text: 'Choose Image', class: "btn green" %>
              </div>
            </div>
            <div class="inp-cont g8">
              <label>Name</label>
              <%= f.text_field :name ,:label => false %>
            </div>
            <div class="inp-cont g8">
              <label>E-mail</label>
              <%= f.email_field :email ,:label => false %>
            </div>
            <div class="inp-cont g8">
              <label>Password</label>
              <%= f.password_field :password ,:label => false %>
            </div>
            <div class="inp-cont multi g8">
              <label>Contact#</label>
              <%= f.number_field :phone_number ,:label => false %>
            </div>
            <div class="inp-cont multi g8">
              <label>Address</label>
              <%= f.text_field :address ,:label => false %>
            </div>
            <div class="inp-cont multi g8">
              <label>City</label>
              <%= f.text_field :city ,:label => false %>
            </div>
            <div class="inp-cont multi g8">
              <label>State</label>
              <%= f.text_field :state ,:label => false %>
            </div>
            <div class="inp-cont multi g8">
              <label>Country</label>
              <%= f.text_field :country ,:label => false %>
            </div>


            <div style="clear:both"></div>
            <div class="inp-cont multi g3">
              <%= f.submit 'Submit', class: 'btn submit' %>
            </div>
        <% end %>
      </div>

      <div id="sys-stats" class="nav-item">
        <div id="ver-stats">
          <%= form_for(@subscription, as: :subscription, url: list_path(@subscription)) do |f| %>
              <div class="inp-cont multi g8">
                <label>Card Number</label>
                <%= f.text_field :card_last_four_digits, :label => false %>
              </div>

              <div class="inp-cont multi g8" style="margin-left: 10px">
                <label>Card Expiration</label>
                <%= f.date_select(:card_expiration, :order => [:month, :day, :year])%>
              </div>
              <div style="clear:both"></div>
              <div class="inp-cont multi g8">
                <%= f.submit 'Submit', class: 'btn submit' %>
              </div>
          <% end %>

        </div>


        <div id="gages" class="hidden" >
          <div id="cpu" class="gage"></div>
          <div id="ram" class="gage"></div>
          <div id="mem" class="gage"></div>
        </div>
      </div>



    </div>

    <ul id="ctrl-nav" class="nav dark">
      <li data-nav="#profile-set"><span class="icon-useralt  nav-icon mod-tg ttip" data-ttip-opt="dark" title="User Settings"></span></li>
      <li class=" bdrad-top-l " data-nav="#sys-stats"><span class="icon-taskmanager-logprograms nav-icon mod-tg ttip" data-ttip-opt="dark" title="Card Settings"></span></li>
      <li class="nav-special no-sel">
        <ul class="no-sel">
          <li id="set-tg" data-modal="#ctrl-set" class="mod-tg ttip" data-ttip-opt="dark" title="Settings"><span class="icon-settingsandroid nav-icon"></span></li>
        </ul>
      </li>
    </ul>
  </div>
</div>

<style>
    .row1{
        height: 350px !important;
    }
    .datepicker{z-index:1151 !important;}
</style>

<script>
    $('#datepicker').datepicker();
</script>

